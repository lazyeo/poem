<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.studyjamscn.s1.sj124.zhangshun1.CardListActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:elevation="2dp"
            android:layout_margin="12dp"
            android:background="@android:color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="这里都是介绍"
                    android:id="@+id/intro"
                    android:padding="16dp" />
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/first"
                    android:background="@android:color/white"
                    android:elevation="1dp"
                    android:layout_margin="5dp"
                    android:onClick="toDetail"
                    android:padding="4dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/cover1"
                            android:scaleType="centerCrop"
                            android:alpha="0.1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="第一首"
                            android:id="@+id/firstTitle"
                            android:layout_centerHorizontal="true"
                            android:paddingTop="16dp"
                            android:textAlignment="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="作者"
                            android:id="@+id/firstAuthor"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:paddingBottom="16dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/second"
                    android:background="@android:color/white"
                    android:elevation="1dp"
                    android:layout_margin="5dp"
                    android:onClick="toDetail"
                    android:padding="4dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/cover2"
                            android:alpha="0.1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="第二首"
                            android:id="@+id/secondTitle"
                            android:layout_centerHorizontal="true"
                            android:paddingTop="16dp"
                            android:textAlignment="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="作者"
                            android:id="@+id/secondAuthor"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:paddingBottom="16dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/third"
                    android:background="@android:color/white"
                    android:elevation="1dp"
                    android:layout_margin="5dp"
                    android:onClick="toDetail"
                    android:padding="4dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/cover3"
                            android:alpha="0.1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="第三首"
                            android:id="@+id/thirdTitle"
                            android:layout_centerHorizontal="true"
                            android:paddingTop="16dp"
                            android:textAlignment="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="作者"
                            android:id="@+id/thirdAuthor"
                            android:paddingBottom="16dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"/>
                </RelativeLayout>
        </LinearLayout>

</LinearLayout>